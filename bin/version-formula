#!/usr/bin/env bash

_usage() {
	echo "USAGE: $(basename "$0") <script_dir> <formula_dir>"
}

version_formula_main() {
	# export PS4='+ ${BASH_SOURCE}:${LINENO}:${FUNCNAME[0]}() '
	# set -x
	set -euo pipefail

	E_ARGS=16
	E_MISSING_FILE=17
	E_NOT_CLEAN=18
	E_MISSING_APP=19

	[ $# -eq 0 ] && _usage && return
	[ $# -lt 2 ] && _usage && return $E_ARGS

	SELF_SCRIPT="$(realpath "${BASH_SOURCE[0]}")"
	SELF_DIR="$(dirname "$SELF_SCRIPT")"
	PATH="$SELF_DIR:$PATH"

	FORMULA_DIR="$2"
	[ ! -d "$FORMULA_DIR" ] && _fatal $E_MISSING_FILE "Missing or not a directory: $FORMULA_DIR"

	SCRIPT_DIR="$1"
	[ ! -d "$SCRIPT_DIR" ] && _fatal $E_MISSING_FILE "Missing or not a directory: $SCRIPT_DIR"

	SCRIPT_NAME="$(basename "$SCRIPT_DIR")"
	SCRIPT_FILE="$SCRIPT_DIR/$SCRIPT_NAME"

	[ ! -f "$SCRIPT_FILE" ] && _fatal $E_MISSING_FILE "Missing or not a file: $SCRIPT_FILE"

	_require version version-tarball

	MO_LIB="$SELF_DIR/../lib/mo"
	[ ! -f "$MO_LIB" ] && _fatal $E_MISSING_FILE "Missing Mustache library."

	VERSION="$(version show "$SCRIPT_FILE")"
	REPO_ROOT="$(git -C "$SCRIPT_DIR" rev-parse --show-toplevel)"
	cd "$REPO_ROOT" || _fatal $E_MISSING_FILE "Cannot change directory to git repo root: $REPO_ROOT"

	TAG="$SCRIPT_NAME@$VERSION"
	TARBALL="$(version-tarball "$SCRIPT_NAME" | tail -1)"
	SUMFILE="$TARBALL.sha256"
	TEMPLATE="$SCRIPT_NAME/homebrew.rb.mustache"

	[ ! -f "$TEMPLATE" ] && _fatal $E_MISSING_FILE "Missing template file: $TEMPLATE"

	(
		source "$MO_LIB"

		export name="$SCRIPT_NAME"
		export tag="$TAG"
		export version="$VERSION"
		export sha256="$(cut -w -f 1 <"$SUMFILE")"

		mo "$TEMPLATE" >"$FORMULA_DIR/$SCRIPT_NAME.rb"
	)
}

_fatal() {
	local exit_code=$1
	shift
	echo "FATAL: $*" >&2
	exit "$exit_code"
}

_require() {
	missing_bin=0

	for bin in "$@"; do
		if ! which "$bin" >/dev/null 2>&1; then
			missing_bin=1
			_error "Required: $bin"
		fi
	done

	if [ $missing_bin -ne 0 ]; then
		_fatal "$E_MISSING_APP" "One or more executables or apps are missing."
	fi
}

version_formula_main "$@"
